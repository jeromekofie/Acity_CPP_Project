    /**
     * @param args the command line arguments
     */
    private void CALCULATEGPA() {
    double totalPoints = 0, totalCredits = 0;

    for (int i = 0; i < tblGrade.getRowCount(); i++) {
        try {
            String grade = (String) tblGrade.getValueAt(i, 2);
            String creditStr = (String) tblGrade.getValueAt(i, 1);

            if (grade == null || creditStr == null || creditStr.isEmpty()) continue;

            double credit = Double.parseDouble(creditStr);
            double point = gradeToPoint(grade.trim().toUpperCase());

            totalPoints += point * credit;
            totalCredits += credit;
        } catch (Exception ex) {
            JOptionPane.showMessageDialog(this, "Error in row " + (i + 1) + ": Invalid input.");
            return;
        }
    }
    if (totalCredits == 0) {
        JOptionPane.showMessageDialog(this, "No valid credit hours entered.");
        return;
    }

    double gpa = totalPoints / totalCredits;
    JOptionPane.showMessageDialog(this, "Calculated GPA: " + String.format("%.2f", gpa));
    
    private double gradeToPoint(String grade) {
    return switch (grade) {
        case "A" -> 4.0;
        case "B+" -> 3.5;
        case "B" -> 3.0;
        case "C+" -> 2.5;
        case "C" -> 2.0;
        case "D" -> 1.5;
        case "E" -> 1.0;
        case "F" -> 0.0;
        default -> {
            JOptionPane.showMessageDialog(this, "Invalid grade: " + grade);
            yield 0.0;
        }
    
    
